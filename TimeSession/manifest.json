{
  "manifest_version": 3,
  "name": "TimeSession",
  "version": "1.0",
  "description": "Monitor de tiempo de trabajo con sesiones y dashboard",
  "permissions": [
    "storage",
    "alarms",
    "activeTab",
    "tabs",
    "notifications",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "TimeSession"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "lib/chart.js",
        "content.css",
        "dashboard.html",
        "options.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}